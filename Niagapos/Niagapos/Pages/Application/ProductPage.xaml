<local:BasePage x:TypeArguments="local:ProductViewModel"  x:Class="Niagapos.ProductPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Niagapos"
             mc:Ignorable="d" 
             x:Name="mProductPage">


    <UserControl.Resources>
        <Style TargetType="local:ProductPage">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="UserControl">
                        <Border BorderBrush="{StaticResource WhiteContainerBrush}" BorderThickness="1" Background="{StaticResource VisualLight2Brush}">
                            <TabControl Background="{StaticResource VeryLightBrush}" FlowDirection="RightToLeft">
                                <TabItem Header="Produk" Background="{StaticResource VeryLightBrush}" FlowDirection="LeftToRight" Margin="0.5 0 0.1 0">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!--  Main content-->
                                        <Border Background="{StaticResource GrayNexusBrush}" >
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>

                                                <Grid Margin="0 0 0 0" Background="{StaticResource DeepWhiteBrush}">

                                                    <Border ClipToBounds="True" Panel.ZIndex="10">
                                                        <ContentPresenter Content="{TemplateBinding Content}" />
                                                    </Border>

                                                    <DataGrid Style="{StaticResource DataGridImageSupport}"
                                                        Panel.ZIndex="9"
                                                        BorderBrush="{StaticResource VeryLightBrush}" 
                                                        BorderThickness="0" 
                                                        Margin="0" 
                                                        Height="598" 
                                                        AutoGenerateColumns="False"
                                                        ItemsSource="{Binding ProductListItemHelper, UpdateSourceTrigger=PropertyChanged}"
                                                        SelectedItem="{Binding SelectedListItemHelper, Mode=TwoWay}"
                                                        FontFamily="{StaticResource Roboto}"
                                                        FontSize="{StaticResource FontSizeRegular}"
                                                        VerticalScrollBarVisibility="Auto"
                                                        HorizontalScrollBarVisibility="Auto"
                                                        CanUserAddRows="False"
                                                        CanUserSortColumns="True"
                                                        CanUserReorderColumns="True"
                                                        CanUserResizeRows="False"
                                                        CanUserResizeColumns="False"
                                                        SelectionMode="Single">
                                                        <DataGrid.InputBindings>
                                                            <KeyBinding Command="{Binding RefreshDataCommand}" Key="F5" />
                                                        </DataGrid.InputBindings>

                                                        <DataGrid.Columns>
                                                            <DataGridTextColumn Binding="{Binding ProductId, Mode=TwoWay}" Header="ID" Width="AUTO"/>
                                                            <DataGridTextColumn Binding="{Binding ProductName, Mode=TwoWay}" Header="NAMA" Width="170" />
                                                            <DataGridTextColumn Binding="{Binding Category, Mode=TwoWay}" Header="KATEGORI" Width="AUTO"/>
                                                            <DataGridTextColumn Binding="{Binding Brand, Mode=TwoWay}" Header="MEREK" Width="AUTO"/>
                                                            <DataGridTextColumn Binding="{Binding Supplier, Mode=TwoWay}" Header="SUPPLIER" Width="AUTO"/>
                                                            <DataGridTextColumn Binding="{Binding CurrentStock, Mode=TwoWay}" Header="STOK" Width="AUTO"/>
                                                            <DataGridTextColumn Binding="{Binding Price, Mode=TwoWay, StringFormat=C0, ConverterCulture=id-ID}" Header="HARGA" Width="AUTO"/>

                                                            <DataGridTemplateColumn Header="DESKRIPSI" Width="200" IsReadOnly="True">
                                                                <DataGridTemplateColumn.CellTemplate>
                                                                    <DataTemplate>
                                                                        <TextBlock Text="{Binding Description, Mode=TwoWay}"
                                                                           TextWrapping="Wrap" 
                                                                           TextAlignment="Justify"/>

                                                                    </DataTemplate>
                                                                </DataGridTemplateColumn.CellTemplate>
                                                            </DataGridTemplateColumn>


                                                            <DataGridTemplateColumn Header="GAMBAR" Width="180" IsReadOnly="True">
                                                                <DataGridTemplateColumn.CellTemplate>
                                                                    <DataTemplate>
                                                                        <Border CornerRadius="5">
                                                                            <Image Source="{Binding ImgUrl, Converter={local:ThumbnailValueConverter}}" 
                                                                       Height="100" 
                                                                       Width="100"
                                                                       local:ClipFromBorderProperty.Value="True"/>
                                                                        </Border>
                                                                    </DataTemplate>
                                                                </DataGridTemplateColumn.CellTemplate>
                                                            </DataGridTemplateColumn>
                                                        </DataGrid.Columns>
                                                    </DataGrid>
                                                </Grid>
                                            </Grid>
                                        </Border>

                                        <!-- Search bar -->
                                        <Border Grid.Row="2"
                                        Panel.ZIndex="0"
                                        Background="{StaticResource DeepPurpleNexusBrush}" 
                                        BorderBrush="{StaticResource MilkBrush}" 
                                        BorderThickness="1 0 1 1" Margin="10 0 10 10"
                                        Padding="5">

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Orientation="Horizontal">

                                                    <!-- Add data control -->
                                                    <Button Style="{StaticResource BaseButtonII}"
                                                    Content="{StaticResource PlusSquareIcon}"
                                                    FontFamily="{StaticResource FontAwesome}"
                                                    Foreground="{StaticResource MilkBrush}"
                                                    Command="{Binding AddControlMenuCommand}"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Left"
                                                    Margin="10 0 0 0"
                                                    FontSize="{StaticResource FontSizeLarge}"
                                           
                                             />

                                                    <!-- Edit control -->
                                                    <Button Style="{StaticResource BaseButtonII}"
                                                    Content="{StaticResource EditIcon}"
                                                    FontFamily="{StaticResource FontAwesome}"
                                                    Foreground="{StaticResource MilkBrush}" 
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Left"
                                                    Command="{Binding EditControlMenuCommand}"
                                                    Margin="0 0 0 0"
                                                    FontSize="{StaticResource FontSizeLarge}"
                                           
                                             />

                                                    <!-- Delete data control -->
                                                    <Button Style="{StaticResource BaseButtonII}"
                                                    Content="{StaticResource TrashIcon}"
                                                    FontFamily="{StaticResource FontAwesome}"
                                                    Foreground="{StaticResource MilkBrush}" 
                                                    Command="{Binding DeleteDataCommand}"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Left"
                                                    Margin="0 0 0 0"
                                                    FontSize="{StaticResource FontSizeLarge}"
                                           
                                            />

                                                    <!-- Add data control -->
                                                    <Button Style="{StaticResource BaseButtonII}"
                                                    Content="{StaticResource PrintIcon}"
                                                    FontFamily="{StaticResource FontAwesome}"
                                                    Foreground="{StaticResource MilkBrush}"
                                                    Command="{Binding ExportDataCommand}"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Left"
                                                    Margin="10 0 0 0"
                                                    FontSize="{StaticResource FontSizeLarge}"
                                           
                                             />


                                                </StackPanel>


                                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 5 0">

                                                    <Button Style="{StaticResource ButtonIcons}"
                                                Content="{StaticResource BarcodeIcon}"
                                                IsEnabled="False"
                                                FontSize="18"
                                                Padding="10 7 10 6"
                                                BorderThickness="1 1 0 2"
                                                Margin="30 0 0 0"
                                                BorderBrush="{StaticResource DeepPurpleNexusBrush}"
                                                Foreground="{StaticResource PurpleNexusBrush}"
                                                Background="{StaticResource HintNexusBrush}"
                                            />
                                                    <TextBox Style="{StaticResource TextBoxStyle}"
                                                 Tag="Cari produk disini..."
                                                 Height="35"
                                                 Width="400"
                                                 Text="{Binding SearchText}"
                                                 Padding="10 9 0 0"
                                                 FontSize="{StaticResource FontSizeSmall}">

                                                        <TextBox.InputBindings>
                                                            <KeyBinding Command="{Binding SearchDataCommand}" Key="Return" />
                                                            <KeyBinding Command="{Binding ClearSearchHistoryCommand}" Key="Esc" />
                                                            <KeyBinding Command="{Binding RefreshDataCommand}" Key="F5" />
                                                        </TextBox.InputBindings>

                                                    </TextBox>

                                                    <Button Style="{StaticResource BaseButton}"
                                                Content="{StaticResource SearchIcon}"
                                                FontFamily="{StaticResource FontAwesome}"
                                                BorderBrush="{StaticResource DarkPurpleNexusBrush}"
                                                Command="{Binding SearchDataCommand}"
                                                BorderThickness="0"
                                             />
                                                </StackPanel>

                                            </Grid>

                                        </Border>


                                    </Grid>
                                </TabItem>
                                <TabItem Header="Kategori Produk" Background="{StaticResource VeryLightBrush}" FlowDirection="LeftToRight" Margin="0.5 0 0.1 0">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!--  Main content-->
                                        <Border Background="{StaticResource GrayNexusBrush}" >
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>

                                                <Grid Margin="0 0 0 0" Background="{StaticResource DeepWhiteBrush}">

                                                    <Border ClipToBounds="True" Panel.ZIndex="10">
                                                        <ContentPresenter Content="{TemplateBinding Content}" />
                                                    </Border>

                                                    <DataGrid Style="{StaticResource DataGridBase}"
                                                        Panel.ZIndex="9"
                                                        BorderBrush="{StaticResource VeryLightBrush}" 
                                                        BorderThickness="0" 
                                                        Margin="0" 
                                                        Height="598" 
                                                        AutoGenerateColumns="False"
                                                        ItemsSource="{Binding ProductCategoryItem, UpdateSourceTrigger=PropertyChanged}"
                                                        SelectedItem="{Binding GetProductCategoryItem, Mode=TwoWay}"
                                                        FontFamily="{StaticResource Roboto}"
                                                        FontSize="{StaticResource FontSizeRegular}"
                                                        VerticalScrollBarVisibility="Auto"
                                                        HorizontalScrollBarVisibility="Auto"
                                                        CanUserAddRows="False"
                                                        CanUserSortColumns="True"
                                                        CanUserReorderColumns="True"
                                                        CanUserResizeRows="False"
                                                        CanUserResizeColumns="False"
                                                        SelectionMode="Single">
                                                        <DataGrid.InputBindings>
                                                            <KeyBinding Command="{Binding RefreshDataCommand}" Key="F5" />
                                                        </DataGrid.InputBindings>

                                                        <DataGrid.Columns>
                                                            <DataGridTextColumn Binding="{Binding ProductCategoryId, Mode=TwoWay}" Header="ID" Width="AUTO"/>
                                                            <DataGridTextColumn Binding="{Binding Category, Mode=TwoWay}" Header="KATEGORI" Width="170" />
                                
                                                            <DataGridTemplateColumn Header="DESKRIPSI" Width="Auto" IsReadOnly="True">
                                                                <DataGridTemplateColumn.CellTemplate>
                                                                    <DataTemplate>
                                                                        <TextBlock Text="{Binding Description, Mode=TwoWay}"
                                                                           TextWrapping="Wrap" 
                                                                           TextAlignment="Justify"/>

                                                                    </DataTemplate>
                                                                </DataGridTemplateColumn.CellTemplate>
                                                            </DataGridTemplateColumn>
                                                        </DataGrid.Columns>
                                                    </DataGrid>
                                                </Grid>
                                            </Grid>
                                        </Border>

                                        <!-- Search bar -->
                                        <Border Grid.Row="2"
                                        Panel.ZIndex="0"
                                        Background="{StaticResource DeepPurpleNexusBrush}" 
                                        BorderBrush="{StaticResource MilkBrush}" 
                                        BorderThickness="1 0 1 1" Margin="10 0 10 10"
                                        Padding="5">

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Orientation="Horizontal">

                                                    <!-- Add data control -->
                                                    <Button Style="{StaticResource BaseButtonII}"
                                                    Content="{StaticResource PlusSquareIcon}"
                                                    FontFamily="{StaticResource FontAwesome}"
                                                    Foreground="{StaticResource MilkBrush}"
                                                    Command="{Binding AddCategoryControlCommand}"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Left"
                                                    Margin="10 0 0 0"
                                                    FontSize="{StaticResource FontSizeLarge}"
                                           
                                             />

                                                    <!-- Edit control -->
                                                    <Button Style="{StaticResource BaseButtonII}"
                                                    Content="{StaticResource EditIcon}"
                                                    FontFamily="{StaticResource FontAwesome}"
                                                    Foreground="{StaticResource MilkBrush}" 
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Left"
                                                    Command="{Binding EditCategoryControlCommand}"
                                                    Margin="0 0 0 0"
                                                    FontSize="{StaticResource FontSizeLarge}"
                                           
                                             />

                                                    <!-- Delete data control -->
                                                    <Button Style="{StaticResource BaseButtonII}"
                                                    Content="{StaticResource TrashIcon}"
                                                    FontFamily="{StaticResource FontAwesome}"
                                                    Foreground="{StaticResource MilkBrush}" 
                                                    Command="{Binding DeleteCategoryCommand}"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Left"
                                                    Margin="0 0 0 0"
                                                    FontSize="{StaticResource FontSizeLarge}"
                                           
                                            />

                                                </StackPanel>
                                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 5 0">

                                                    <Button Style="{StaticResource ButtonIcons}"
                                                Content="{StaticResource BarcodeIcon}"
                                                IsEnabled="False"
                                                FontSize="18"
                                                Padding="10 7 10 6"
                                                BorderThickness="1 1 0 2"
                                                Margin="30 0 0 0"
                                                BorderBrush="{StaticResource DeepPurpleNexusBrush}"
                                                Foreground="{StaticResource PurpleNexusBrush}"
                                                Background="{StaticResource HintNexusBrush}"
                                            />
                                                    <TextBox Style="{StaticResource TextBoxStyle}"
                                                 Tag="Cari kategori disini..."
                                                 Height="35"
                                                 Width="400"
                                                 Text="{Binding SearchTextCategory, UpdateSourceTrigger=PropertyChanged}"
                                                 Padding="10 9 0 0"
                                                 FontSize="{StaticResource FontSizeSmall}">

                                                        <TextBox.InputBindings>
                                                            <KeyBinding Command="{Binding SearchCategoryCommand}" Key="Return" />
                                                            <KeyBinding Command="{Binding ClearSearchHistoryCommand}" Key="Esc" />
                                                        </TextBox.InputBindings>

                                                    </TextBox>

                                                    <Button Style="{StaticResource BaseButton}"
                                                Content="{StaticResource SearchIcon}"
                                                FontFamily="{StaticResource FontAwesome}"
                                                BorderBrush="{StaticResource DarkPurpleNexusBrush}"
                                                Command="{Binding SearchCategoryCommand}"
                                                BorderThickness="0"
                                             />
                                                </StackPanel>



                                            </Grid>

                                        </Border>


                                    </Grid>
                                </TabItem>

                                <TabItem Header="Supplier Produk" Background="{StaticResource VeryLightBrush}" FlowDirection="LeftToRight" Margin="0.5 0 0.1 0">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!--  Main content-->
                                        <Border Background="{StaticResource GrayNexusBrush}" >
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>

                                                <Grid Margin="0 0 0 0" Background="{StaticResource DeepWhiteBrush}">

                                                    <Border ClipToBounds="True" Panel.ZIndex="10">
                                                        <ContentPresenter Content="{TemplateBinding Content}" />
                                                    </Border>

                                                    <DataGrid Style="{StaticResource DataGridBase}"
                                                        Panel.ZIndex="9"
                                                        BorderBrush="{StaticResource VeryLightBrush}" 
                                                        BorderThickness="0" 
                                                        Margin="0" 
                                                        Height="598" 
                                                        AutoGenerateColumns="False"
                                                        ItemsSource="{Binding ProductSupplierItems, UpdateSourceTrigger=PropertyChanged}"
                                                        SelectedItem="{Binding GetProductSupplierItem, Mode=TwoWay}"
                                                        FontFamily="{StaticResource Roboto}"
                                                        FontSize="{StaticResource FontSizeRegular}"
                                                        VerticalScrollBarVisibility="Auto"
                                                        HorizontalScrollBarVisibility="Auto"
                                                        CanUserAddRows="False"
                                                        CanUserSortColumns="True"
                                                        CanUserReorderColumns="True"
                                                        CanUserResizeRows="False"
                                                        CanUserResizeColumns="False"
                                                        SelectionMode="Single">
                                                        <DataGrid.InputBindings>
                                                            <KeyBinding Command="{Binding RefreshDataCommand}" Key="F5" />
                                                        </DataGrid.InputBindings>

                                                        <DataGrid.Columns>
                                                            <DataGridTextColumn Binding="{Binding ProductSupplierId, Mode=TwoWay}" Header="ID" Width="AUTO"/>
                                                            <DataGridTextColumn Binding="{Binding CompanyName, Mode=TwoWay}" Header="NAMA" Width="200" />
                                                            <DataGridTextColumn Binding="{Binding Brand, Mode=TwoWay}" Header="MEREK" Width="AUTO" />
                                                            <DataGridTextColumn Binding="{Binding Email, Mode=TwoWay}" Header="EMAIL" Width="200" />
                                                            <DataGridTextColumn Binding="{Binding PhoneNumber, Mode=TwoWay}" Header="TELEPON" Width="AUTO" />
                                                            <DataGridTextColumn Binding="{Binding Address, Mode=TwoWay}" Header="ALAMAT" Width="AUTO" />

                                                            
                                                        </DataGrid.Columns>
                                                    </DataGrid>
                                                </Grid>
                                            </Grid>
                                        </Border>

                                        <!-- Search bar -->
                                        <Border Grid.Row="2"
                                        Panel.ZIndex="0"
                                        Background="{StaticResource DeepPurpleNexusBrush}" 
                                        BorderBrush="{StaticResource MilkBrush}" 
                                        BorderThickness="1 0 1 1" Margin="10 0 10 10"
                                        Padding="5">

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <StackPanel Orientation="Horizontal">

                                                    <!-- Add data control -->
                                                    <Button Style="{StaticResource BaseButtonII}"
                                                    Content="{StaticResource PlusSquareIcon}"
                                                    FontFamily="{StaticResource FontAwesome}"
                                                    Foreground="{StaticResource MilkBrush}"
                                                    Command="{Binding AddSupplierControlCommand}"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Left"
                                                    Margin="10 0 0 0"
                                                    FontSize="{StaticResource FontSizeLarge}"
                                           
                                             />

                                                    <!-- Edit control -->
                                                    <Button Style="{StaticResource BaseButtonII}"
                                                    Content="{StaticResource EditIcon}"
                                                    FontFamily="{StaticResource FontAwesome}"
                                                    Foreground="{StaticResource MilkBrush}" 
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Left"
                                                    Command="{Binding EditSupplierControlCommand}"
                                                    Margin="0 0 0 0"
                                                    FontSize="{StaticResource FontSizeLarge}"
                                           
                                             />

                                                    <!-- Delete data control -->
                                                    <Button Style="{StaticResource BaseButtonII}"
                                                    Content="{StaticResource TrashIcon}"
                                                    FontFamily="{StaticResource FontAwesome}"
                                                    Foreground="{StaticResource MilkBrush}" 
                                                    Command="{Binding DeleteSupplierCommand}"
                                                    VerticalAlignment="Center"
                                                    HorizontalAlignment="Left"
                                                    Margin="0 0 0 0"
                                                    FontSize="{StaticResource FontSizeLarge}"
                                           
                                            />

                                                </StackPanel>

                                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 0 5 0">

                                                    <Button Style="{StaticResource ButtonIcons}"
                                                Content="{StaticResource BarcodeIcon}"
                                                IsEnabled="False"
                                                FontSize="18"
                                                Padding="10 7 10 6"
                                                BorderThickness="1 1 0 2"
                                                Margin="30 0 0 0"
                                                BorderBrush="{StaticResource DeepPurpleNexusBrush}"
                                                Foreground="{StaticResource PurpleNexusBrush}"
                                                Background="{StaticResource HintNexusBrush}"
                                            />
                                                    <TextBox Style="{StaticResource TextBoxStyle}"
                                                 Tag="Cari supplier disini..."
                                                 Height="35"
                                                 Width="400"
                                                 Text="{Binding SearchTextSupplier, UpdateSourceTrigger=PropertyChanged}"
                                                 Padding="10 9 0 0"
                                                 FontSize="{StaticResource FontSizeSmall}">

                                                        <TextBox.InputBindings>
                                                            <KeyBinding Command="{Binding SearchSupplierCommand}" Key="Return" />
                                                            <KeyBinding Command="{Binding ClearSearchHistoryCommand}" Key="Esc" />
                                                        </TextBox.InputBindings>

                                                    </TextBox>

                                                    <Button Style="{StaticResource BaseButton}"
                                                Content="{StaticResource SearchIcon}"
                                                FontFamily="{StaticResource FontAwesome}"
                                                BorderBrush="{StaticResource DarkPurpleNexusBrush}"
                                                Command="{Binding SearchSupplierCommand}"
                                                BorderThickness="0"
                                             />
                                                </StackPanel>



                                            </Grid>

                                        </Border>


                                    </Grid>
                                </TabItem>
                            </TabControl>

                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            
            <ContentControl local:AnimateSlideInFromRightProperty.Value="{Binding CanEdit}"
                            Background="Transparent" 
                            HorizontalAlignment="Center" 
                            Panel.ZIndex="10"
                            Width="1035"
                            Height="598"
                            >

                <Border Background="{StaticResource DeepWhiteBrush}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <!-- Title -->
                            <RowDefinition Height="30" />
                            <!-- Content -->
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Title bar content -->
                        <Grid Background="{StaticResource DarkGrayBrush}" Panel.ZIndex="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20 0 0 0" Orientation="Horizontal">
                                <TextBlock Text="{StaticResource PlusSquareIcon}"
                                           Foreground="{StaticResource VeryLightBrush}"
                                           FontSize="{StaticResource FontSizeLarge}"
                                           FontFamily="{StaticResource FontAwesome}">

                                </TextBlock>

                                <TextBlock Text="Ubah produk"
                                           Margin="20 0 0 0"
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource VeryLightBrush}"
                                           FontSize="{StaticResource FontSizeSmall}"
                                           FontFamily="{StaticResource Neuropol}">

                                </TextBlock>
                            </StackPanel>

                        </Grid>

                        <!-- Main content -->
                        <Border Grid.Row="1" Margin="20 10 20 10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <!-- Product name section -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Margin="0 10 10 10">
                                        <TextBlock Text="Rincian Produk"
                                                   Foreground="{StaticResource PurpleNexusBrush}"
                                                   FontFamily="{StaticResource Expressway}"
                                                   FontSize="16"
                                                   
                                         />

                                        <TextBlock Foreground="{StaticResource PurpleNexusBrush}"
                                        FontFamily="{StaticResource Expressway}"
                                        FontSize="{StaticResource FontSizeSmallest}"
                                        FontStyle="Italic">
                                
                                <Span>Berisikan Informasi nama</Span><LineBreak/>
                                <Span>produk, kode produk dan</Span><LineBreak/>
                                <Span>sebagainya..</Span>

                                        </TextBlock>

                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="77 10 10 10">
                                        <TextBlock Text="Nama:"
                                       Foreground="{StaticResource PurpleNexusBrush}"
                                       FontFamily="{StaticResource Expressway}"
                                       FontSize="15"
                                       Margin="0 0 0 10"
                             />

                                        <TextBox Tag="Masukan nama produk..."
                                     Style="{StaticResource TextBoxStyle}"
                                     FontSize="{StaticResource FontSizeSmall}"
                                     Width="350"
                                     Text="{Binding SelectedListItemHelper.ProductName, 
                                            UpdateSourceTrigger=PropertyChanged, 
                                            NotifyOnSourceUpdated=True, 
                                            NotifyOnValidationError=True}"  
                                     BorderThickness="1"
                                     Background="Transparent"
                                    />
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" Margin="80 10 10 10">
                                        <TextBlock Text="ID Produk:"
                                                   Foreground="{StaticResource PurpleNexusBrush}"
                                                   FontFamily="{StaticResource Expressway}"
                                                   FontSize="15"
                                                   Margin="0 0 0 10"
                                         />

                                        <TextBox Tag="Kode unik sebuah produk..."
                                     Style="{StaticResource TextBoxStyle}"
                                     FontSize="{StaticResource FontSizeSmall}"
                                     Width="350"
                                     Text="{Binding SelectedListItemHelper.ProductId, 
                                                    UpdateSourceTrigger=PropertyChanged, 
                                                    NotifyOnSourceUpdated=True, 
                                                    NotifyOnValidationError=True}"
                                     BorderThickness="1"
                                                 IsEnabled="False"
                                                 IsReadOnly="True"
                                     Background="Transparent"
                                    />
                                    </StackPanel>

                                </Grid>

                                <Grid Grid.Row="1">
                                    <Grid Margin="197 10 0 0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="Kategori:"
                                                   Foreground="{StaticResource PurpleNexusBrush}"
                                                   FontFamily="{StaticResource Expressway}"
                                                   FontSize="15"
                                                   Margin="0 0 0 10"
                                         />

                                            <TextBox Tag="Masukan kategori produk"
                                         Style="{StaticResource TextBoxStyle}"
                                         FontSize="{StaticResource FontSizeSmall}"
                                         Width="350"
                                         BorderThickness="1"
                                         Background="Transparent"
                                         Text="{Binding SelectedListItemHelper.Category, 
                                                UpdateSourceTrigger=PropertyChanged, 
                                                NotifyOnSourceUpdated=True, 
                                                NotifyOnValidationError=True}"
                                />
                                        </StackPanel>

                                        <StackPanel Margin="90 0 0 0" Grid.Column="1">
                                            <TextBlock Text="Supplier:"
                                                 Foreground="{StaticResource PurpleNexusBrush}"
                                                 FontFamily="{StaticResource Expressway}"
                                                 FontSize="15"
                                                 Margin="0 0 0 10"
                                         />

                                            <TextBox Tag="Masukan supplier produk"
                                         Style="{StaticResource TextBoxStyle}"
                                         FontSize="{StaticResource FontSizeSmall}"
                                         Width="350"
                                         BorderThickness="1"
                                         Background="Transparent"
                                         Text="{Binding SelectedListItemHelper.Supplier, 
                                                UpdateSourceTrigger=PropertyChanged, 
                                                NotifyOnSourceUpdated=True, 
                                                NotifyOnValidationError=True}"
                                />
                                        </StackPanel>

                                    </Grid>

                                </Grid>



                                <!-- Pricing and variant section -->
                                <Grid Grid.Row="3" Margin="0 25 0 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Margin="20 10 43 10">
                                        <TextBlock Text="Harga dan Stok"
                                       Foreground="{StaticResource PurpleNexusBrush}"
                                       FontFamily="{StaticResource Expressway}"
                                       FontSize="16"
                                                   
                             />

                                        <TextBlock Foreground="{StaticResource PurpleNexusBrush}"
                                       FontFamily="{StaticResource Expressway}"
